@using Bookshelf.Web.Models.Requests;
@model RequestGetViewModel

<h1>
    Rejected
</h1>

@foreach (var item in Model.Requests)
{
    <div class="card" style=" padding: 25px 25px 25px 25px;">
        <div class="container" style">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <h4>
                        <b>
                            <text>@item.Title</text>
                        </b>
                    </h4>
                </div>
            </div>


            <p>
                Author: @item.Author

            </p>

            <p>
                Priority :@item.Priority

            </p>

            <p>
                Status: @item.Status

            </p>

            <a asp-controller="Request" asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger "> <i class="bi bi-person-dash-fill"></i>Details</a>
        </div>
    </div>
}
@using Bookshelf.Web.Models.Resources;
@model ResourceGetViewModel

@{
    ViewData["Title"] = "Taken resources";
}

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-danger "> <i class="bi bi-person-dash-fill"></i>Go to followed</a>
</div>

@foreach (var item in Model.Resource)
{
    <div class="card" style=" padding: 25px 25px 25px 25px;">
        <div class="container" style">
            <div class="row">
                <div class="col-12 d-flex justify-content-center">
                    <h4>
                        <b>
                            <text>@item.Title</text>
                        </b>
                    </h4>
                </div>
            </div>

            <p>
                Author: @item.Author

            </p>

            <p>
                Status: @item.Status

            </p>

            <a asp-controller="Request" asp-action="Details" asp-route-id="@item.Id" class="btn btn-danger "> <i class="bi bi-person-dash-fill"></i>Details</a>
        </div>
    </div>
}